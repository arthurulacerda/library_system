<p id="notice"><%= notice %></p>

<h1>Book Units</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Available</th>
      <th>Edition</th>
      <th>Condition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_units.each do |book_unit| %>
      <tr>
        <td><%= book_unit.book.title %></td>
        <td><%= book_unit.book.author %></td>
        <td><%= book_unit.available %></td>
        <td><%= book_unit.edition %></td>
        <td><%= book_unit.condition %></td>
        <td><%= link_to 'Show', book_unit %></td>
        <td><%= link_to 'Edit', edit_book_unit_path(book_unit) %></td>
        <td><%= link_to 'Destroy', book_unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>